<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper_fragment_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marcostoral.keepmoving.fragments.RouteDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivDetailsType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDetailsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tvDetailsDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tvDetailsTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="34"
                android:textSize="15sp"
                />

        </LinearLayout>


        <ImageButton
            android:id="@+id/ib_gallery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_gallery"
            />



    </LinearLayout>


</LinearLayout>
