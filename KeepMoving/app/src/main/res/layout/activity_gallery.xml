    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stadistics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marcostoral.keepmoving.activities.MainGelleryActivity">

    <fragment
        android:id="@+id/gvPicturesFragment"
        android:name="com.marcostoral.keepmoving.fragments.GridPhotoViewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_grid_photo_view"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_show_photo"
        android:visibility="invisible"/>

</RelativeLayout>
